<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ItemDetailsActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:src="@drawable/ic_icon_navigation_chevron_left_24px" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/neusa_next_std_light"
            android:text="EBAFIX"
            android:textColor="#EB839D"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_item"
            android:layout_marginEnd="@dimen/_4sdp"
            android:fontFamily="@font/neusa_next_std_bold"
            android:text="98.99 LE"
            android:textColor="#EB839D"
            android:textSize="@dimen/_9sdp" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_below="@+id/name_item"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toEndOf="@+id/price_item"
            android:backgroundTint="#EB839D"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_path_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_item"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="4.9"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_6sdp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_23sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:src="@drawable/ic_cart" />


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:src="@drawable/boots1" />

    <LinearLayout
        android:id="@+id/pager_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/item_image"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:fontFamily="@font/neusa_next_std_regular"
                android:text="Details"
                android:textColor="#EB839D"
                android:textSize="@dimen/_9sdp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:fontFamily="@font/neusa_next_std_regular"
                android:text="Reviews"
                android:textColor="#EB839D"
                android:textSize="@dimen/_9sdp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pager_layout"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="BRAND"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_light"
                    android:text="Ebafix"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="CONDITION"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_light"
                    android:text="Brand New, With Box"
                    android:textColor="#EB839D"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="CATEGORY"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_light"
                    android:text="Cosmetics"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EB839D"
                    android:layout_marginTop="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/button_background"
                    android:layout_gravity="end"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/arial_bold"
                        android:text="Cancel"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_40sdp"
                        android:textColor="#EB839D"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="start"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="Serial"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_light"
                    android:text="0590458902809"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="MATERIAL"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_light"
                    android:text="Lorem ipsum…"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:fontFamily="@font/neusa_next_std_bold"
                    android:text="Lorem ipsum"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:fontFamily="@font/neusa_next_std_light"
                    android:text="Lorem ipsum…"
                    android:textColor="#EB839D"
                    android:textSize="@dimen/_9sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#EB839D"
                    android:layout_marginTop="@dimen/_19sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/button_background"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/arial_bold"
                        android:text="ADD TO CART"
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_marginEnd="@dimen/_24sdp"
                        android:textColor="#EB839D"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/review_item"
            tools:itemCount="6"/>

    </LinearLayout>


</RelativeLayout>